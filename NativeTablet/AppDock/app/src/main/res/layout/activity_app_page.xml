<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorLightColor"
    tools:context="com.appdockproject.appdock.appPage"
    android:theme="@android:style/Widget.Toolbar.Button.Navigation">

    <fragment
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:id="@+id/navBar"
        android:name="com.appdockproject.appdock.navbar"
        tools:layout="@layout/fragment_navbar"
        android:layout_margin="0dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/appTitle"
                    android:textColor="@color/titles"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorLightColor"
                    android:src="@drawable/wolof" />

            </LinearLayout>

        </RelativeLayout>


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:rowCount="7"
            android:columnCount="3"
            android:orientation="horizontal"
            android:useDefaultMargins="false"
            android:layout_gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/aImage"
                android:src="@drawable/a"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@color/colorLightColor"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_margin="0dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app1"
                android:id="@+id/aText"
                android:layout_row="1"
                android:layout_column="0"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorLightColor"
                android:textStyle="bold"
                android:textColor="@color/titles"
                android:textSize="13dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bImage"
                android:src="@drawable/b"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@color/colorLightColor"
                android:layout_margin="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="fill_horizontal|center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app2"
                android:id="@+id/bText"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/titles"
                android:textSize="13dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cImage"
                android:src="@drawable/c"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@color/colorLightColor"
                android:layout_margin="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app3"
                android:id="@+id/cText"
                android:layout_row="1"
                android:layout_column="2"
                android:textStyle="bold"
                android:textColor="@color/titles"
                android:textSize="13dp"
                android:textAlignment="center"
                android:layout_gravity="fill" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dImage"
                android:src="@drawable/d"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@color/colorLightColor"
                android:layout_margin="0dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app4"
                android:id="@+id/dText"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/titles"
                android:textSize="13dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eImage"
                android:src="@drawable/e"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@color/colorLightColor"
                android:layout_margin="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="fill_horizontal|center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app5"
                android:id="@+id/eText"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/titles"
                android:textSize="13dp"
                android:textAlignment="center" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fImage"
                android:src="@drawable/f"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@color/colorLightColor"
                android:layout_margin="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:text="@string/app6"
                android:id="@+id/fText"
                android:layout_row="3"
                android:layout_column="2"
                android:textStyle="bold"
                android:textColor="@color/titles"
                android:textSize="13dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal|right" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gImage"
                android:src="@drawable/g"
                android:layout_row="5"
                android:layout_column="0"
                android:background="@color/colorLightColor"
                android:layout_margin="0dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app7"
                android:id="@+id/gText"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/titles"
                android:textSize="13dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hImage"
                android:src="@drawable/h"
                android:layout_row="5"
                android:layout_column="1"
                android:background="@color/colorLightColor"
                android:layout_margin="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="fill_horizontal|center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app8"
                android:id="@+id/hText"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/titles"
                android:textSize="13dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iImage"
                android:src="@drawable/i"
                android:layout_row="5"
                android:layout_column="2"
                android:background="@color/colorLightColor"
                android:layout_margin="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:text="@string/app9"
                android:id="@+id/iText"
                android:layout_row="6"
                android:layout_column="2"
                android:textStyle="bold"
                android:textColor="@color/titles"
                android:textSize="13dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal|right" />


        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom|center">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
